<h1> Course details for <%= @course.title %> </h1>
<%= link_to 'Add a new section', new_instructor_course_section_path(@course), :class => 'btn btn-primary btn-lg' %> 
<%= link_to 'Preview as student...', course_path(@course), :class => 'btn btn-primary btn-lg' %>


<ul>
	<% @course.sections.each do |section| %>
		<li>
			<%= section.title %>
		</li>
	<% end %>
</ul>