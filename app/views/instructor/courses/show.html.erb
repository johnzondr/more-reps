<h1> Course details for <%= @course.title %> </h1>
<%= link_to 'Add a new section', new_instructor_course_section_path(@course), :class => 'btn btn-primary btn-lg' %> 
<%= link_to 'Preview as student...', course_path(@course), :class => 'btn btn-primary btn-lg' %>


<ul>
	<% @course.sections.each do |section| %>
		<li>
			<%= section.title %>
			<%= link_to 'Add new lesson', new_instructor_section_lesson_path(section), :class => 'btn btn-primary btn-xs' %>
			<ul>
				<% section.lessons.each do |lesson| %>
					<li>
						<b><%= lesson.title %></b> - <%= lesson.subtitle %>
					</li>
				<% end %>
			</ul>
		</li>
	<% end %>
</ul>